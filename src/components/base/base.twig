<!DOCTYPE html>
<html lang="cs-CZ">
  <head>
    <meta charset="utf-8" />
    <title>{{ title }} - {{ project }}</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <meta name="format-detection" content="telephone=no" />
    <link rel="preload" href="css/styles.css" as="style" />
    <link rel="stylesheet" media="screen, handheld" href="css/styles.css" />
    <link rel="stylesheet" media="print" href="css/prints.css" />
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      as="script"
      crossorigin
    />

    <link rel="preload" href="js/scripts.js" as="script" />
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Получите все ссылки на элементы
        const links = document.querySelectorAll(".card .link.link--brown");

        // Добавьте обработчик клика для каждой карточки
        links.forEach((link) => {
          link.addEventListener("click", function (e) {
            e.preventDefault();
            const cardId = link.closest(".card").getAttribute("data-card-id");
            const box = document.querySelector(
              `.card[data-card-id="${cardId}"] .box`
            );
            const action = link.getAttribute("data-action");

            if (action === "show") {
              box.style.display = "block";
              link.innerText = "Závřít";
              link.setAttribute("data-action", "hide");
            } else {
              box.style.display = "none";
              link.innerText = "Číst více";
              link.setAttribute("data-action", "show");
            }
          });
        });
      });
    </script>
  </head>
  <body>
    {% if title != "02.0_posts" %}
    <div class="base">
      {% include "@components/header/header.twig" %}
      <main class="main" aria-label="Hlavní obsah">
        {% block main %}{% endblock %}
      </main>
      {% include "@components/footer/footer.twig" %}
    </div>
    {% else %}
    <div class="base-posts">
      {% include "@components/header/header-posts.twig" %}
      <main class="main" aria-label="Hlavní obsah">
        {% block main %}{% endblock %}
      </main>
      {% include "@components/footer/footer-dark.twig" %}
    </div>
    {% endif %}
    <script
      defer
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
   
    <script defer src="js/scripts.js"></script>
  </body>
</html>
